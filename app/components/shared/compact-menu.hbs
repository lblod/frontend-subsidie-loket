{{! the role="menu" is added by the AuDropdown component, so we can ignore the rule here.}}
{{! template-lint-disable require-context-role}}
<AuDropdown
  @alignment="left"
  @title="Menu modules"
  @buttonLabel="Account settings"
>
  {{#if this.currentSession.canAccessSubsidies}}
    <AuLink @route="subsidy.applications.index" role="menuitem">
      <AuIcon @icon="documents" @alignment="left" />
      Subsidiebeheer
    </AuLink>
  {{/if}}
  {{#if this.currentSession.canAccessPublicServices}}
    <AuLinkExternal
      @icon="link-external"
      @iconAlignment="left"
      href={{(lpdc-url)}}
      role="menuitem"
    >
      Producten- en dienstencatalogus
    </AuLinkExternal>
  {{/if}}
  {{#if this.currentSession.canAccessVerenigingen}}
    <AuLinkExternal
      @icon="link-external"
      @iconAlignment="left"
      href={{(verenigingen-url)}}
      role="menuitem"
    >
      Verenigingen
    </AuLinkExternal>
  {{/if}}
</AuDropdown>